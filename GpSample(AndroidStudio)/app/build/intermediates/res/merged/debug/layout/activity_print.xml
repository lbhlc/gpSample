<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_total">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"/>

        <LinearLayout android:id="@+id/ll_save_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="876"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <com.example.smallchart.chart.LineChart
                android:id="@+id/lineCharty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.example.smallchart.chart.LineChart
                android:id="@+id/lineChartx"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.example.smallchart.chart.LineChart
                android:id="@+id/lineChartz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"/>

        <TextView android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="00dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="80"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
            android:text="开始打印"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"/>

        <TextView android:id="@+id/to_connect"
            android:layout_width="match_parent"
            android:layout_height="00dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="80"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
            android:text="去连接打印机"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        android:visibility="gone">

        <ImageView android:id="@+id/iv_pic_get"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </FrameLayout>


</FrameLayout>
